{
    "manifest_version": 2,
    "name": "My Extension",
    "version": "1.0",
    "description": "A brief description of your extension",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_icon": "colors.png",
      "default_popup": "popup.html",
      "default_title": "Click me!"
    },
    "icons": {
      "48": "colors.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  